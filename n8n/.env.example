########################################
# БАЗОВЫЕ НАСТРОЙКИ N8N
########################################

# Порт, на котором слушает n8n внутри docker-compose
N8N_PORT=5678

# Внешний домен/хост, по которому доступен n8n
N8N_HOST=lunirepoko.beget.app
N8N_PROTOCOL=https

# ОБЯЗАТЕЛЬНО сменить на свой ключ и не светить!
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_RANDOM_KEY

# Таймзона
GENERIC_TIMEZONE=Europe/Moscow

